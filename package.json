{
  "name": "endpoint-watch",
  "version": "0.1.0",
  "description": "A bot to notify when endpoint is not responding to GET requets.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon -r dotenv-safe/config index.js",
    "lint:js": "eslint '**/*.js'",
    "lint:secrets": "secretlint '**/*'",
    "lint": "yarn lint:js && yarn lint:secrets",
    "format": "eslint '**/*.js'  --fix",
    "release": "standard-version"
  },
  "author": "Kleros",
  "license": "MIT",
  "private": true,
  "keywords": [
    "kleros",
    "bot",
    "wallet",
    "balance"
  ],
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "dotenv-safe": "^8.2.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@secretlint/secretlint-rule-preset-recommend": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^17.2.0",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^1.0.1",
    "rimraf": "^3.0.2",
    "secretlint": "^2.0.0",
    "standard-version": "^7.1.0",
    "touch": "^3.1.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/node_modules/**"
    ],
    "globals": [
      "require"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.10"
  }
}
